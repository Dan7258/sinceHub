# Routes Config
#
# This file defines all application routes (Higher priority routes first)
#

module:testrunner
# module:jobs


GET     /tags/id/:id                            Tags.GetTagByID
GET     /tags/name/:name                        Tags.GetTagByName
GET     /tags                                   Tags.GetAllTags
POST    /tags                                   Tags.CreateTag
POST    /tags/:id/publications                  Tags.AddPublicationsToTag
DELETE  /tags/id/:id                            Tags.DeleteTagByID
DELETE  /tags/:id/publications                  Tags.DeletePublicationsFromTag
PATCH   /tags/id/:id                            Tags.UpdateTagByID

GET     /publications/id/:id                    Publications.GetPublicationByID
GET     /                                       Publications.ShowPublications
GET     /getPublicationsData                    Publications.GetPublicationsData
POST    /publications                           Publications.CreatePublication
POST    /publications/:id/tags                  Publications.AddTagsToPublication
POST    /publications/:id/profiles              Publications.AddProfilesToPublication
DELETE  /publications/id/:id                    Publications.DeletePublicationByID
DELETE  /publications/:id/tags                  Publications.DeleteTagsFromPublication
DELETE  /publications/:id/profiles              Publications.DeleteProfilesFromPublication
PATCH   /publications/id/:id                    Publications.UpdatePublicationByID

GET     /profiles/id/:id                            Profiles.GetProfileByID
GET     /getUserData                                Profiles.GetUserData
GET     /profile                                    Profiles.ShowUserProfile
GET     /profiles                                   Profiles.GetAllProfiles
GET     /login                                      Profiles.ShowLoginPage
POST    /login                                      Profiles.Login
GET     /logout                                     Profiles.Logout
GET     /register                                   Profiles.ShowRegisterPage
POST    /register                                   Profiles.VerifyAndCreateUser
POST    /send-verification-code-for-register        Profiles.SendVerificationCodeForRegister
POST    /send-verification-code-for-change-email    Profiles.SendVerificationCodeForChangeEmail
POST    /send-verification-code-for-change-password Profiles.SendVerificationCodeForChangePassword
POST    /settings/verify-and-change-email           Profiles.VerifyAndChangeEmail
POST    /settings/verify-and-change-password        Profiles.VerifyAndChangePassword
POST    /settings/stop-change-email                 Profiles.StopChangeEmail
POST    /settings/stop-change-password              Profiles.StopChangePassword
GET     /settings                                   Profiles.ShowSettingsPage
POST    /profiles/:id/publications                  Profiles.AddPublicationsToProfile
POST    /profiles/:id/subscribers                   Profiles.AddSubscribersToProfile
DELETE  /profiles/id/:id                            Profiles.DeleteProfileByID
DELETE  /profiles/login/:login                      Profiles.DeleteProfileByLogin
DELETE  /profiles/:id/publications                  Profiles.DeletePublicationsFromProfile
DELETE  /profiles/:id/subscribers                   Profiles.DeleteSubscribersFromProfile
PATCH   /profiles/                                  Profiles.UpdateProfileByID
PATCH   /profiles/login/:login                      Profiles.UpdateProfileByLogin

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/*filepath                       Static.Serve("public")

# Catch all, this will route any request into the controller path
#
#                    **** WARNING ****
# Enabling this exposes any controller and function to the web.
# ** This is a serious security issue if used online **
#
# For rapid development uncomment the following to add new controller.action endpoints
# without having to add them to the routes table.
# *       /:controller/:action                    :controller.:action
